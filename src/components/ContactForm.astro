---
import { Send } from "@lucide/astro";
---

<form id="contact-form" class="space-y-6">
  <div>
    <label
      for="nombre"
      class="block text-sm font-medium text-[rgb(var(--text-primary))] dark:text-[rgb(var(--text-primary))] mb-2"
    >
      Nombre completo
    </label>
    <input
      type="text"
      id="nombre"
      name="nombre"
      required
      class="w-full px-4 py-3 rounded-xl border border-[rgb(var(--divider))]
             bg-[rgb(var(--surface-white))] dark:bg-[rgb(var(--surface-dark-input))]
             text-[rgb(var(--text-primary))] dark:text-[rgb(var(--text-primary))]
             placeholder:text-[rgb(var(--text-muted))] dark:placeholder:text-[rgb(var(--text-muted))]
             shadow-sm dark:shadow-sm
             focus:ring-2 focus:ring-[rgb(var(--accent))] focus:border-transparent
             transition-all duration-200"
      placeholder="Tu nombre"
    />
  </div>

  <div>
    <label
      for="email"
      class="block text-sm font-medium text-[rgb(var(--text-primary))] dark:text-[rgb(var(--text-primary))] mb-2"
    >
      Email
    </label>
    <input
      type="email"
      id="email"
      name="email"
      required
      class="w-full px-4 py-3 rounded-xl border border-[rgb(var(--divider))]
             bg-[rgb(var(--surface-white))] dark:bg-[rgb(var(--surface-dark-input))]
             text-[rgb(var(--text-primary))] dark:text-[rgb(var(--text-primary))]
             placeholder:text-[rgb(var(--text-muted))] dark:placeholder:text-[rgb(var(--text-muted))]
             shadow-sm dark:shadow-sm
             focus:ring-2 focus:ring-[rgb(var(--accent))] focus:border-transparent
             transition-all duration-200"
      placeholder="tu@email.com"
    />
  </div>

  <div>
    <label
      for="mensaje"
      class="block text-sm font-medium text-[rgb(var(--text-primary))] dark:text-[rgb(var(--text-primary))] mb-2"
    >
      Mensaje
    </label>
    <textarea
      id="mensaje"
      name="mensaje"
      required
      rows="4"
      class="w-full px-4 py-3 rounded-xl border border-[rgb(var(--divider))]
             bg-[rgb(var(--surface-white))] dark:bg-[rgb(var(--surface-dark-input))]
             text-[rgb(var(--text-primary))] dark:text-[rgb(var(--text-primary))]
             placeholder:text-[rgb(var(--text-muted))] dark:placeholder:text-[rgb(var(--text-muted))]
             shadow-sm dark:shadow-sm
             focus:ring-2 focus:ring-[rgb(var(--accent))] focus:border-transparent
             transition-all duration-200 resize-none"
      placeholder="CuÃ©ntanos sobre tu proyecto..."></textarea>
  </div>

  <button
    type="submit"
    class="w-full
          bg-linear-to-br from-[rgb(var(--accent))] to-[rgb(var(--accent-strong))]
           text-white font-semibold py-3 px-6 rounded-xl
           hover:shadow-2xl hover:scale-105 active:scale-95
           transition-all duration-200
           flex items-center justify-center gap-2"
  >
    <Send class="w-5 h-5" />
    Enviar por WhatsApp
  </button>
</form>
